{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build OpenGL + GLFW + GLAD",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-IC:/msys64/ucrt64/include",
                "C:/msys64/ucrt64/include/glad/src/glad.c",           // Path to glad/include
                "-IC:/dev/glfw/include",           // Path to GLFW include
                "-LC:/msys64/ucrt64/lib",
                "-LC:/dev/glfw/lib-mingw-w64",     // Path to GLFW libs
                "-lglfw3",
                "-lopengl32",
                "-lgdi32"                         // Add this for Windows
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build task for OpenGL with GLFW and GLAD"
        }
    ]
}